<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zch.systerm.dao.UserRoleDao">

    <resultMap type="com.zch.systerm.entity.UserRole" id="UserRoleMap">
        <result property="userRoleId" column="user_role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        select
          user_role_id, user_id, role_id
        from blog.user_role
        where user_role_id = #{userRoleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserRoleMap">
        select
          user_role_id, user_id, role_id
        from blog.user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserRoleMap">
        select
          user_role_id, user_id, role_id
        from blog.user_role
        <where>
            <if test="userRoleId != null">
                and user_role_id = #{userRoleId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userRoleId" useGeneratedKeys="true">
        insert into blog.user_role(user_id, role_id)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.user_role
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where user_role_id = #{userRoleId}
    </update>

    <!--批量增加 -->
    <insert id="insertRecords">
      insert  into  blog.user_role (user_id,role_id) values
      <foreach collection="roleIds" item="item" index="index" separator=",">
         ( #{userId}, #{item})
      </foreach>
    </insert>

    <delete id="deleteByUserId">
     delete  from   blog.user_role where user_id = #{userId}
    </delete>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.user_role where user_role_id = #{userRoleId}
    </delete>

</mapper>